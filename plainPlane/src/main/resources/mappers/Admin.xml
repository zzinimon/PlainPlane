<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.test.plainPlane.admin.AdminDAO">
<!-- all about staff List -->
	<select id="staffList" resultType="Gs">
		SELECT * FROM GS
	</select>
	<!-- 	select by airline/auth/id -->
	<select id="selectByAirline" resultType="Gs" parameterType="String">
		SELECT * FROM GS
		WHERE GS_AIRLINE=#{gs_airline}
		ORDER BY GS_AUTH DESC
	</select>
	<select id="selectByAuth" resultType="Gs" parameterType="int">
		SELECT * FROM GS
		WHERE GS_AUTH=#{gs_auth}
		ORDER BY GS_AUTH DESC
	</select>
	<select id="selectById" resultType="Gs">
		SELECT * FROM GS
		WHERE GS_ID=#{gs_id}
	</select>
	
	<!-- 	insert Gs VO -->
	<insert id="addStaff" parameterType="Gs">
		INSERT INTO GS(GS_ID, GS_PW, GS_AUTH,GS_AIRLINE)
		VALUES(#{gs_id},#{gs_pw},#{gs_auth},#{gs_airline})
	</insert>
	
	<!-- 	delete Gs VO -->
	<delete id="deleteStaff" parameterType="String">
		DELETE FROM GS
		WHERE GS_ID=#{gs_id}
	</delete>
	
	<!-- 	modify auth of Gs Vo -->
	<update id="modifyAuth" parameterType="Gs">
		UPDATE GS
		SET GS_AUTH=#{gs_auth}
		WHERE GS_ID=#{gs_id}
	</update>
	



<!-- all about flight List -->
	<select id="flightList" resultType="Flt">
		SELECT * FROM FLT
	</select>
	<!-- 	insert Flight Vo -->
	<insert id="addFlight" parameterType="Flt">
		INSERT INTO FLT(FLT_NO,FLT_DATE,CRAFT_ID,FLT_BOUND,FLT_DPT,FLT_ARR,FLT_STA,FLT_STD,FLT_AIRLINE)
		VALUES(#{flt_no},#{flt_date},#{craft_id},#{flt_bound},#{flt_dpt},#{flt_arr},#{flt_sta},#{flt_std},#{flt_airline})
	</insert>
	

</mapper>
